@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cover Type List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp0controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; New Category
            </a>
        </div>
        </div>
        <br />
        <br />
    

        <table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                CoverType Name
            </th>
            <th>
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="width:50%">
                    @item.Name
                </td>
                <td class="w-100 btn-group" role="group">
                    <a 
                    asp-controller="CoverType" 
                    asp-action="Edit" 
                    asp-route-id="@item.Id"
                    class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i> 
                        Edit 
                    </a>

                    <a 
                    asp-controller="CoverType" 
                    asp-action="Delete" 
                    asp-route-id="@item.Id"
                    class="btn btn-danger mx-2">
                        <i class="bi bi-trash3"></i>
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>